<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CameraSettingsSeekBarTheme">
        <item name="android:layout_width">@dimen/layout_width_camera_seek_bar</item>
        <item name="android:max">@integer/max_camera_settings_seek_bar</item>
        <item name="android:paddingBottom">@dimen/padding_top_and_bottom_camera_seek_bar</item>
        <item name="android:paddingTop">@dimen/padding_top_and_bottom_camera_seek_bar</item>
        <item name="android:progress">@integer/progress_camera_settings_seek_bar</item>
        <item name="android:progressDrawable">@drawable/camera_custom_seek_bar</item>
        <item name="android:thumb">@drawable/camera_seek_bar_thumb</item>
    </style>

    <style name="CameraCropSeekBarTheme">
        <item name="android:layout_width">@dimen/layout_width_camera_seek_bar</item>
        <item name="android:max">@integer/max_camera_crop_seek_bar</item>
        <item name="android:paddingBottom">@dimen/padding_top_and_bottom_camera_seek_bar</item>
        <item name="android:paddingTop">@dimen/padding_top_and_bottom_camera_seek_bar</item>
        <item name="android:progress">@integer/progress_camera_crop_seek_bar</item>
        <item name="android:progressDrawable">@drawable/camera_custom_seek_bar</item>
        <item name="android:thumb">@drawable/camera_seek_bar_thumb</item>
    </style>


</resources>
